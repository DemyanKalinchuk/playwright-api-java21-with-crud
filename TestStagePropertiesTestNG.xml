<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Playwright API Test Suite" parallel="tests" thread-count="2" configfailurepolicy="continue">


    <groups>
        <run>
            <exclude name="prod"/>
        </run>
    </groups>

    <listeners>
        <listener class-name="utils.helpers.retryHelper.RetryListener"/>
    </listeners>

    <test name="API Smoke + CRUD Tests">
        <classes>
            <class name="smokeTests.ApiSmokeTests"/>
            <class name="smokeTests.AuthRegisterTests"/>
            <class name="smokeTests.AuthSmokeTests"/>
        </classes>
    </test>

</suite>
